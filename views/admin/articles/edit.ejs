<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/navbar.ejs'); %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
                <h2>Editar Artigo</h2>
        </div>
        <div class="card-body">   
            <hr>
            <form method="POST" action="/articles/update">
                <label><b>Título:</b></label>
                <input class="form-control" type="text" name="title" maxlength="60" placeholder="" value="<%= article.title %>"><br>
                <label><b>Descrição do Artigo:</b></label>
                <input class="form-control" type="text" name="description" maxlength="30" placeholder="" value="<%= article.description %>"><br>
                <input type="hidden" name="id" value="<%= article.id %>">

                <label><b>Texto:</b></label><br>
                <textarea class="form-control" name="body" id="article"><%- article.body %></textarea><br>

                <button class="btn btn-success">Atualizar</button>
            </form>
        </div>  
    </div>
</div>

<%- include ('../../partials/footer.ejs'); %>