<%- include('partials/header'); %>
<%- include('partials/homenavbar'); %>
<body>

    <div class="container">
        <br>
        <div class="p-5 mb-4 bg-light rounded-3">
            <div class="container-fluid py-5">
              <h1 class="display-5 fw-bold">Bem vindo(a)!</h1>
              <p class="lead">Mais um blog feito com o curso: Guia do Programador</p>
              <hr class="my-4">
              <p>Vivendo e aprendendo</p>
              <button class="btn btn-primary btn-lg" type="button">Todos os Artigos</button>
            </div>
        </div> <%# END DIV p-5 mb-4 bg-light rounded-3 %>

        <br> 
        
        <div class="row align-items-md-stretch">
            <% articles.forEach(article => { %>
            <div class="col-md-6">
              <div class="h-100 p-5 text-white bg-dark rounded-3 border m-10">
                <h3><%= article.title %></h3>
                <p><%= article.description %></p>
                <a href="/<%= article.slug %>" class="btn btn-outline-light" type="button">Ler Artigo</a>
              </div><hr>
        </div> <%# END DIV ROW ALIGN ITEMS %>
        <% }) %>


    </div>  <%# END DIV CONTAINER %>



</body> 
<%- include('partials/footer'); %>